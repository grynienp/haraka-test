{
  "plugins": [
    "haraka"
  ],
  "extends": [ "eslint:recommended", "plugin:haraka/recommended" ],
  "root": true,
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}]
  },
  "globals": {
    "OK": true,
    "CONT": true,
    "DENY": true,
    "DENYSOFT": true,
    "DENYDISCONNECT": true,
    "DENYSOFTDISCONNECT": true
  }
}
